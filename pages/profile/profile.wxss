.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f8f8f8;
}

.header {
  background-color: white;
  padding: 30rpx;
  text-align: center;
  border-bottom: 1rpx solid #eee;
}

.title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.content {
  flex: 1;
  padding: 40rpx;
}

.avatar-section {
  text-align: center;
  margin-bottom: 60rpx;
}

.avatar-placeholder {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  border: 4rpx dashed #ddd;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 20rpx;
  background-color: #f9f9f9;
}

.avatar-text {
  font-size: 28rpx;
  color: #999;
}

.avatar-tip {
  font-size: 24rpx;
  color: #999;
}

.input-section {
  margin-bottom: 40rpx;
}

.label {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  margin-bottom: 20rpx;
}

.input-field {
  width: 100%;
  height: 80rpx;
  text-align: center;
  font-size: 28rpx;
  color: #333;
  background-color: transparent;
  border: none;
  outline: none;
}

.input-line {
  height: 2rpx;
  background-color: #ddd;
  margin-top: 10rpx;
}

.date-picker {
  width: 100%;
}

.picker-display {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 80rpx;
  position: relative;
}

.picker-text {
  font-size: 28rpx;
  color: #333;
}

.picker-icon {
  position: absolute;
  right: 0;
  font-size: 24rpx;
}

.footer {
  background-color: white;
  padding: 40rpx;
  border-top: 1rpx solid #eee;
}

.next-btn {
  width: 100%;
  height: 100rpx;
  background-color: #007AFF;
  border-radius: 50rpx;
  border: 4rpx solid #000;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}

.next-btn:disabled {
  background-color: #ccc;
  border-color: #ccc;
}

.btn-text {
  color: white;
  font-size: 32rpx;
  font-weight: bold;
}

.btn-arrow {
  color: white;
  font-size: 32rpx;
  margin-left: 10rpx;
} 