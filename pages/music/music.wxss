.container {
  padding: 20rpx;
  padding-bottom: 120rpx;
}

.filter-section {
  background-color: white;
  border-radius: 15rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.filter-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
  color: #333;
}

.music-list {
  margin-bottom: 20rpx;
}

.music-item {
  display: flex;
  align-items: center;
  background-color: white;
  border-radius: 15rpx;
  padding: 20rpx;
  margin-bottom: 15rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.cover {
  width: 100rpx;
  height: 100rpx;
  border-radius: 10rpx;
  margin-right: 20rpx;
}

.info {
  flex: 1;
}

.title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.artist {
  display: block;
  font-size: 26rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.bpm {
  font-size: 24rpx;
  color: #07C160;
  background-color: rgba(7, 193, 96, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
}

.controls {
  margin-left: 20rpx;
}

.player {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: white;
  border-top: 1rpx solid #eee;
  padding: 20rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.player-cover {
  width: 80rpx;
  height: 80rpx;
  border-radius: 10rpx;
  margin-right: 20rpx;
}

.player-info {
  flex: 1;
}

.player-title {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 4rpx;
}

.player-artist {
  display: block;
  font-size: 24rpx;
  color: #666;
  margin-bottom: 4rpx;
}

.player-bpm {
  font-size: 22rpx;
  color: #07C160;
}

.player-controls {
  display: flex;
  gap: 15rpx;
  align-items: center;
  justify-content: flex-end;
}

.control-btn {
  min-width: 70rpx !important;
  min-height: 70rpx !important;
  width: 70rpx !important;
  height: 70rpx !important;
  background-color: #07C160 !important;
  border-radius: 50% !important;
  display: flex !important;
  align-items: center !important;
  justify-content: center !important;
  border: none !important;
  padding: 0 !important;
  margin: 0 !important;
  box-shadow: 0 2rpx 8rpx rgba(7, 193, 96, 0.3);
  transition: all 0.2s ease;
  overflow: hidden;
  flex-shrink: 0;
  line-height: 1 !important;
}

.control-btn:active,
.button-hover {
  background-color: #06AD56 !important;
  transform: scale(0.95);
  box-shadow: 0 1rpx 4rpx rgba(7, 193, 96, 0.4);
}

.btn-icon {
  width: 32rpx !important;
  height: 32rpx !important;
  flex-shrink: 0;
}

/* 确保按钮内容居中 */
.control-btn::after {
  border: none !important;
} 