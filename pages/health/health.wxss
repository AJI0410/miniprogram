.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f8f8f8;
}

.header {
  background-color: white;
  padding: 30rpx;
  text-align: center;
  border-bottom: 1rpx solid #eee;
}

.title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.content {
  flex: 1;
  padding: 40rpx;
}

.input-section {
  margin-bottom: 40rpx;
}

.label {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  margin-bottom: 20rpx;
}

.input-group {
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}

.input-field {
  width: 200rpx;
  height: 80rpx;
  text-align: center;
  font-size: 32rpx;
  color: #333;
  background-color: transparent;
  border: none;
  outline: none;
}

.unit {
  font-size: 28rpx;
  color: #666;
  margin-left: 10rpx;
}

.input-line {
  height: 2rpx;
  background-color: #ddd;
  margin-top: 10rpx;
}

.bmi-section {
  background-color: white;
  border-radius: 20rpx;
  padding: 40rpx;
  text-align: center;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.bmi-label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.bmi-value {
  display: block;
  font-size: 60rpx;
  font-weight: bold;
  color: #07C160;
  margin-bottom: 10rpx;
}

.bmi-category {
  display: block;
  font-size: 24rpx;
  color: #999;
}

.advice-section {
  background-color: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.advice-title {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.advice-content {
  display: block;
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}

.footer {
  background-color: white;
  padding: 40rpx;
  border-top: 1rpx solid #eee;
}

.next-btn {
  width: 100%;
  height: 100rpx;
  background-color: #007AFF;
  border-radius: 50rpx;
  border: 4rpx solid #000;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}

.next-btn:disabled {
  background-color: #ccc;
  border-color: #ccc;
}

.btn-text {
  color: white;
  font-size: 32rpx;
  font-weight: bold;
}

.btn-arrow {
  color: white;
  font-size: 32rpx;
  margin-left: 10rpx;
} 