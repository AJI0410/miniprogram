.container {
  padding: 20rpx;
  background-color: #f8f9fa;
  min-height: 100vh;
  position: relative;
}

/* 倒计时页面 */
.countdown-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background: linear-gradient(135deg, #07C160, #00d4aa);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  animation: fadeIn 0.3s ease;
}

.countdown-container {
  text-align: center;
  color: white;
}

.countdown-number {
  font-size: 200rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 20rpx;
  animation: countdownPulse 1s ease;
}

.countdown-text {
  font-size: 36rpx;
  opacity: 0.9;
  display: block;
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

@keyframes countdownPulse {
  0% {
    transform: scale(0.5);
    opacity: 0;
  }
  50% {
    transform: scale(1.2);
    opacity: 1;
  }
  100% {
    transform: scale(1);
    opacity: 1;
  }
}

/* 开始运动区域 */
.start-section {
  background-color: white;
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.monitor-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  text-align: center;
}

.center-start {
  display: flex;
  justify-content: center;
}

/* 运动状态区域 */
.workout-status-section {
  background-color: white;
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

/* 计时器区域 */
.timer-section {
  text-align: center;
  margin-bottom: 40rpx;
  transition: all 0.3s ease;
}

.timer-section.active {
  background: linear-gradient(135deg, #07C160, #00d4aa);
  border-radius: 20rpx;
  padding: 30rpx;
  margin: -30rpx -30rpx 30rpx -30rpx;
}

.timer-display {
  margin-bottom: 30rpx;
}

.timer-text {
  font-size: 72rpx;
  font-weight: bold;
  color: #07C160;
  font-family: 'Courier New', monospace;
  display: block;
  margin-bottom: 10rpx;
}

.timer-section.active .timer-text {
  color: white;
}

.timer-label {
  font-size: 24rpx;
  color: #999;
  display: block;
}

.timer-section.active .timer-label {
  color: rgba(255, 255, 255, 0.8);
}

/* 统计数据 */
.stats-display {
  display: flex;
  justify-content: space-around;
  padding: 20rpx 0;
}

.stat-item {
  text-align: center;
  flex: 1;
}

.stat-number {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.timer-section.active .stat-number {
  color: white;
}

.stat-label {
  font-size: 24rpx;
  color: #999;
}

.timer-section.active .stat-label {
  color: rgba(255, 255, 255, 0.8);
}

/* 控制按钮区域 */
.control-section {
  margin-top: 20rpx;
}

.control-buttons {
  display: flex;
  justify-content: center;
  gap: 30rpx;
}

.control-btn {
  border: none;
  border-radius: 50rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  font-weight: 500;
  min-width: 160rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
}

.start-btn {
  background: linear-gradient(135deg, #07C160, #00d4aa);
  color: white;
}

.start-btn:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
}

.pause-btn {
  background: linear-gradient(135deg, #ff9500, #ff6b35);
  color: white;
}

.pause-btn:active {
  transform: scale(0.95);
}

.resume-btn {
  background: linear-gradient(135deg, #007aff, #5ac8fa);
  color: white;
}

.resume-btn:active {
  transform: scale(0.95);
}

.stop-btn {
  background: linear-gradient(135deg, #ff3b30, #ff6b6b);
  color: white;
}

.stop-btn:active {
  transform: scale(0.95);
}

.btn-text {
  font-weight: 600;
}

/* 运动历史 */
.workout-history {
  background-color: white;
  border-radius: 24rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
}

.history-list {
  max-height: 400rpx;
  overflow-y: auto;
}

.history-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.history-item:last-child {
  border-bottom: none;
}

.history-info {
  flex: 1;
}

.history-date {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.history-duration {
  font-size: 24rpx;
  color: #07C160;
}

.history-stats {
  text-align: right;
}

.history-distance {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.history-calories {
  font-size: 24rpx;
  color: #ff6b6b;
} 